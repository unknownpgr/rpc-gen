{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./lib",
    "baseUrl": "./",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
